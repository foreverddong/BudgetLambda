@page "/packageeditor/{packageid:guid}/manage-component"
@using BudgetLambda.CoreLib.Component
@using BudgetLambda.CoreLib.Database
@inject BudgetContext database
@inject NavigationManager navigation


<MudContainer>
    <MudGrid>
        <MudItem md="12">
            <MudGrid>
                <MudItem md="6">
                    <MudField Label="Package ID" Variant="Variant.Filled">@package.PackageID</MudField>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudToolBar>
            <MudText Typo="Typo.h6">Components</MudText>
            <MudSpacer />
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Create" Color="Color.Primary">create</MudButton>
        </MudToolBar>
    </MudGrid>
</MudContainer>
