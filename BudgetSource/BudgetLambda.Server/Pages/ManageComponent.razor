@page "/packageeditor/{packageid:guid}/manage-component"
@using BudgetLambda.CoreLib.Component
@using BudgetLambda.CoreLib.Database
@inject BudgetContext database
@inject NavigationManager navigation
@using ComponentBase = BudgetLambda.CoreLib.Component.ComponentBase;

<MudContainer>
    <MudGrid>
        <MudItem md="12">
            <MudGrid>
                <MudItem md="6">
                    <MudField Label="Package ID" Variant="Variant.Filled">@package.PackageID</MudField>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudToolBar>
            <MudText Typo="Typo.h6">Components</MudText>
            <MudSpacer />
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Create" Color="Color.Primary" OnClick="CreateClicked">create</MudButton>
        </MudToolBar>
    </MudGrid>
    <MudTable Items="@components" OnRowClick="RowClicked" T="ComponentBase">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>ID</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.ComponentName</MudTd>
            <MudTd DataLabel="ID">@context.ComponentID</MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>
